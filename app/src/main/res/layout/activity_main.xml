<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:padding="24dp"
    tools:context=".activities.MainActivity">

    <!-- Title Section -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="#BB86FC"
        android:textSize="34sp"
        android:textStyle="bold"
        android:fontFamily="monospace"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <!-- Mathematics Section -->
    <LinearLayout
        android:id="@+id/mathSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#1E1E1E"
        android:padding="20dp"
        android:elevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mathematics"
            android:textStyle="bold"
            android:textSize="26sp"
            android:textColor="#BB86FC"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"/>

        <!-- Arithmetic Button -->
        <Button
            android:id="@+id/btnArithmetic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Arithmetic"
            android:backgroundTint="#3700B3"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_marginBottom="12dp"/>

        <!-- Base Conversion Button -->
        <Button
            android:id="@+id/btnBaseConversion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Base Conversion"
            android:backgroundTint="#3700B3"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_marginBottom="12dp"/>

        <!-- Calculus Button -->
        <Button
            android:id="@+id/btnCalculus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calculus"
            android:backgroundTint="#3700B3"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_marginBottom="12dp"/>
    </LinearLayout>

    <!-- Logic Section -->
    <LinearLayout
        android:id="@+id/logicSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#1E1E1E"
        android:padding="20dp"
        android:elevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/mathSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logic"
            android:textStyle="bold"
            android:textSize="26sp"
            android:textColor="#BB86FC"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"/>

        <!-- Boolean Functions Button -->
        <Button
            android:id="@+id/btnBooleanFunctions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Boolean Functions"
            android:backgroundTint="#3700B3"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_marginBottom="12dp"/>

        <!-- Truth Table Button -->
        <Button
            android:id="@+id/btnTruthTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Truth Table"
            android:backgroundTint="#3700B3"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_marginBottom="12dp"/>

        <!-- Satisfiability Button -->
        <Button
            android:id="@+id/btnSatisfiability"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Satisfiability"
            android:backgroundTint="#3700B3"
            android:textColor="#FFFFFF"
            android:textSize="20sp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
